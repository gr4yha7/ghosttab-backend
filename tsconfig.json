{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@ghosttab/common": ["./packages/common/src"],
      "@ghosttab/common/*": ["./packages/common/src/*"]
    }
  },
  "exclude": ["node_modules", "**/dist", "**/node_modules"]
}